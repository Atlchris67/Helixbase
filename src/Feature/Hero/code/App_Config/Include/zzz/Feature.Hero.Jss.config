<configuration xmlns:x="http://www.sitecore.net/xmlconfig/">
  <sitecore>
	<settings>
		<setting name="Analytics.AutoDetectBots">
			<x:attribute name="value">false</x:attribute>
		</setting>
		<setting name="Analytics.Robots.IgnoreRobots">
			<x:attribute name="value">false</x:attribute>
		</setting>
	</settings>
    <sites>
      <site x:before="site[@name='helixbase']" 
            inherits="helixbase"
            name="herojssapp"
            rootPath="/sitecore/content/herojssapp"
            startItem="/home"
            database="master" />
    </sites>
    <javaScriptServices>
      <apps>
        <!-- you may override other attributes from 'defaults' in the app definiton below -->
        <app name="HeroJSSApp"
             sitecorePath="/sitecore/content/HeroJSSApp"
             inherits="defaults"
        />
      </apps>
    </javaScriptServices>
  </sitecore>
</configuration>